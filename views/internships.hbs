---
layout: no-social.hbs
title: Internships | Career Center
name: internships
type: internships
---

<section class="content extra-content hero">
  <h1>Internships</h1>
</section>

<section class="resources content extra-content">
  <h2>Resources</h2>
  <div class="buttons"></div>
</section>

<section class="faq content extra-content">
  <h2 class="faq-header">Frequently Asked Questions</h2>
  {{#each internships.question}}
    <a class="collapsed accordion-header" data-toggle="collapse" id="{{ id }}-heading" href="#{{ id }}" role="tab" aria-expanded="false" aria-controls="{{ id }}">
      <h3>{{ question }}</h3>
    </a>
    {{#if sidelist}}
      <div style="height: 0px;" aria-expanded="false" id="{{ id }}" class="panel-collapse collapse faq-question-contents" role="tabpanel" aria-labelledby="{{ id }}-heading">
        <div class="faq-answer faq-answer--with-sidelist">
          {{ answer }}
        </div>
        <div class="faq-sidelist-container">
          <ul class="faq-sidelist">
          {{#each sidelist.items}} 
            <li class="faq-sidelist-item"> {{ this }}</li>
          {{/each}}
          </ul>
        </div>
      </div>
    {{else}} {{#if checklist}}
      <div style="height: 0px;" aria-expanded="false" id="{{ id }}" class="panel-collapse collapse faq-question-contents" role="tabpanel" aria-labelledby="{{ id }}-heading">
        <div class="faq-answer faq-answer--with-checklist">
          {{ answer }}
        </div>
        <div class="faq-checklist-container">
          <ol class="faq-checklist">
            {{#each checklist.items}}
              <li class="faq-checklist-item">
                <h4 class="condition">{{ condition }}</h4>
                <div class="switch">
                  <input id="{{id}}" class="cmn-toggle cmn-toggle-yes-no" type="checkbox" {{#unless if-no}} disabled="disabled" checked="checked"{{/unless}}>
                  <label for="{{id}}" {{#if if-no}} data-on="Yes" {{else}} data-on="Of course!" {{/if}} data-off="No"></label>
                </div>
                {{#if if-yes}}
                  <div class="if-yes" data-for="{{id}}">
                    {{ if-yes }}
                    {{#if if-yes-button}}
                      <a href="{{if-yes-button.url}}">{{if-yes-button.text}}</a>
                    {{/if}}
                  </div>
                {{/if}}
                {{#if if-no}}
                  <div class="if-no" data-for="{{id}}">
                    {{ if-no }}
                  </div>
                {{/if}}
              </li>
            {{/each}}
          </ol>
        </div>
      </div>
    {{else}}
      <div style="height: 0px;" aria-expanded="false" id="{{ id }}" class="panel-collapse collapse faq-answer" role="tabpanel" aria-labelledby="{{ id }}-heading">
        {{ answer }}
      </div>
    {{/if}}{{/if}}
  {{/each}}
</section>