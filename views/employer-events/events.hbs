---
path-to-root: ../../
ng-app: career-center-events
name: employer-events
type: employer-events
title: Events | Career Center
layout: employers.hbs
component: 
- calendar
---
<section class="employer-events-wrapper content extra-content content--no-padding row" ng-controller="calendar-ctrl">
  <h2 class="employer-events-title">Event Registration</h2>
  <ul class="employer-events flex">
    <li class="employer-event" ng-class="{'employer-event--big': events.length % 2 !== 0 && event.abbrev === 'aucf'}" ng-class-even="{'employer-event--big-even': events.length % 2 !== 0 && event.abbrev === 'aucf'}" ng-repeat="event in events">
      <a class="employer-event-link" href="[[ event.url ]]">
        <h3>[[ event.name ]]</h3>
        <div class="employer-event-details">
          <div class="employer-event-when">
            <div class="employer-event-date">[[ event.date.month ]] [[ event.date.day ]]</div>
            <div class="employer-event-time">[[ event.date.time.start ]] - [[ event.date.time.end ]]</div>
          </div>
          <div class="employer-event-tags">
            <div class="employer-event-tag" ng-repeat="tag in event.tags">[[ tag ]]</div>
          </div>
        </div>
      </a>
    </li>
  </ul>
</section>