<section class="employer-events-wrapper content extra-content content--no-padding row" ng-controller="calendar-ctrl">
  <h2 class="employer-events-title">Event Registration</h2>
  <p ng-if="events.length % 2 === 0" class="blurb">Click any event to get more information and register.</p>
  <ul class="employer-events flex">
    <li ng-if="events.length % 2 !== 0" class="employer-event employer-event--blurb">Click any event to get more information and register.</li>
    <li class="employer-event" ng-repeat="event in events">
      <a class="employer-event-link" href="[[ event.url ]]">
        <h3>[[ event.name ]]</h3>
        <div class="employer-event-details">
          <div class="employer-event-when">
            <div class="employer-event-date">[[ event.date.month ]] [[ event.date.day ]]</div>
            <div class="employer-event-time">[[ event.date.time.start ]] - [[ event.date.time.end ]]</div>
          </div>
          <div class="employer-event-cost" ng-if="event.cost">
            $[[ event.cost ]]
          </div>
        </div>
      </a>
    </li>
  </ul>
</section>

<section class="row sponsors content extra-content">
  <h2 class="sponsors-header">Sponsors</h2>
  <div class="sponsors-content" ng-controller="sponsors-ctrl">
    <div class="sponsor" ng-repeat="sponsor in sponsors">
      <span class="vert-centerer"></span>
      <a href="[[ sponsor.url ]]">
        <img src="assets/images/sponsors/[[ sponsor.logo ]]" class="grayscale grayscale-fade"></img>
      </a>
    </div>
  </div>
</section>