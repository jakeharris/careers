<section class="flex">
  <div class="card unpadded services">
    <div class="padded services-content">
      <h2>
        Our Services
      </h2>
      <ul class="services-list flex">
        <li class="service flex-half">
          <a href="employers/job-postings.html">Job Postings</a>
        </li>
