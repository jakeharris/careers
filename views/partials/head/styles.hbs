<!-- App styles -->
<link rel="stylesheet" href="assets/styles/app.{{#if production}}min.{{/if}}css">

<!-- Style modules -->
{{#is page.layout 'default.hbs'}}
  <link rel="stylesheet" href="assets/styles/social-nav.{{#if production}}min.{{/if}}css">
{{/is}}
{{#each component}}
  {{#is this 'sponsors'}}
    <link rel="stylesheet" href="http://cdn.jsdelivr.net/jquery.gray/1.3.6/gray.min.css">
  {{/is}}
{{/each}}
{{#each style}} 
  <link rel="stylesheet" href="assets/styles/{{ this }}.{{#if production}}min.{{/if}}css">
{{/each}}

<!-- Page-specific styles -->
<link rel="stylesheet" href="assets/styles/{{ type }}.{{#if production}}min.{{/if}}css">