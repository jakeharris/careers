<!-- Positioning the nav -->
<script>
  var header;
  window.onscroll = function () {
    if(header === undefined) header = document.getElementById('pre-header')
    if(header === undefined) return
    
    var nav = document.getElementById('nav')
    if(header.getBoundingClientRect().bottom <= 0 + 50 && nav.style.position !== 'bordered') { 
      nav.classList.add('bordered')
    
    } else if (header.getBoundingClientRect().bottom > 0 + 50 && nav.classList.contains('bordered')) {
      nav.classList.remove('bordered') 
    }
  }
</script>