</section>

<section class="content extra-content">
  <h3 class="faq-header"></h3>
  
  <div class="panel-group faq" id="faq" role="tablist" aria-multiselectable="true">
    {{#each off-campus-faq.question }}
    <div class="panel panel-default">
      <div class="panel-heading accordion-header" role="tab" id="{{ id }}-heading">
        <h4 class="panel-title faq-question">
          <a role="button" data-toggle="collapse" data-parent="#accordion" href="#{{ id }}" aria-expanded="false" aria-controls="{{ id }}">
            {{ question }}
          </a>
        </h4>
      </div>
      <div id="{{ id }}" class="panel-collapse collapse" role="tabpanel" aria-labelledby="{{ id }}-heading">
        <div class="panel-body faq-answer">
          {{#each answer}}
            <p>{{ this }}</p>
          {{/each}}
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</section>
